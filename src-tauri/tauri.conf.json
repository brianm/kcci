{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KCCI",
  "version": "0.1.0",
  "identifier": "org.skife.kcci",
  "build": {
    "frontendDist": "frontend"
  },
  "app": {
    "windows": [
      {
        "title": "KCCI",
        "width": 960,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/kcci-server"
    ]
  }
}
