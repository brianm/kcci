{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/kcci-server",
          "sidecar": true
        },
        {
          "name": "open-safari",
          "cmd": "open",
          "args": ["-a", "Safari", { "validator": "^https://.*$" }],
          "sidecar": false
        }
      ]
    }
  ]
}
